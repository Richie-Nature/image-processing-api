{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "no-empty": [
            "error",
            {
                "allowEmptyCatch": true
            }
        ],
        "camelcase":"error",
        "no-const-assign":"error",
        "no-useless-rename":"error",
        "no-var":"error",
        "require-jsdoc":"error",
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": ["error", "always"]
    }
}
